{
  "name": "arlo-client",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@types/node": "12.0.7",
    "@types/react": "16.8.19",
    "@types/react-dom": "16.8.4",
    "@types/react-router-dom": "^4.3.4",
    "@types/react-tap-event-plugin": "^0.0.30",
    "@types/react-toastify": "^4.0.2",
    "@types/styled-components": "^4.1.15",
    "@types/uuidv4": "^2.0.0",
    "@types/yup": "^0.26.22",
    "@typescript-eslint/eslint-plugin": "^1.9.0",
    "@typescript-eslint/parser": "^1.9.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.2.0",
    "eslint-plugin-cypress": "^2.2.1",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jest": "^22.5.1",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-no-null": "^1.0.2",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.13.0",
    "eslint-plugin-react-hooks": "^1.6.1",
    "formik": "^1.5.8",
    "http-proxy-middleware": "^0.19.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-router-dom": "^5.0.1",
    "react-scripts": "3.0.1",
    "react-test-renderer": "^16.8.6",
    "react-toastify": "^5.3.1",
    "styled-components": "^4.3.2",
    "typescript": "3.5.1",
    "uuidv4": "^4.0.0",
    "yup": "^0.27.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "is-ci \"test:ci\" \"test:watch\"",
    "test:watch": "react-scripts test",
    "test:ci": "CI=true tsc && react-scripts test --maxWorkers 2 --env=jsdom --coverage",
    "test:update": "react-scripts test -u  --watchAll=false",
    "test:coverage": "react-scripts test --coverage --watchAll=false"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsc && lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.+(js|jsx|ts|tsx)": [
        "stylelint",
        "eslint --quiet --fix",
        "git add"
      ],
      "*.css": [
        "stylelint --config .stylelintrc-css.js --fix",
        "git add"
      ],
      "*.+(css|graphql|json|less|md|mdx|sass|scss|yaml|yml)": [
        "prettier --write",
        "git add"
      ]
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.d.ts",
      "!src/index.tsx",
      "!src/contexts/ballotContext.ts",
      "!src/serviceWorker.ts"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 25,
        "branches": 0,
        "lines": 10,
        "functions": 25
      },
      "./src/components/Form": {
        "statements": 100,
        "branches": 0,
        "lines": 100,
        "functions": 100
      }
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/react": "^8.0.1",
    "@types/enzyme": "^3.10.1",
    "@types/jest": "^24.0.15",
    "babel-jest": "^24.8.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "husky": "^2.3.0",
    "is-ci-cli": "^1.1.1",
    "jest-fetch-mock": "^2.1.2",
    "jest-styled-components": "^6.3.1",
    "lint-staged": "^8.1.7",
    "prettier": "^1.17.1",
    "stylelint": "^10.0.1",
    "stylelint-config-palantir": "^4.0.0",
    "stylelint-config-prettier": "^5.1.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.7.0"
  },
  "resolutions": {
    "jest": "24.7.1"
  }
}
