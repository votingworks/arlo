{
  "name": "arlo",
  "private": true,
  "scripts": {
    "build": "yarn --cwd client install && yarn --cwd client build",
    "heroku-postbuild": "yarn build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn --cwd client lint-staged && make typecheck-server"
    }
  },
  "lint-staged": {
    "*.+(css|graphql|json|less|md|mdx|sass|scss|yaml|yml)": [
      "prettier --write"
    ],
    "*.py": [
      "pipenv run black",
      "pipenv run pylint --load-plugins pylint_flask_sqlalchemy"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "devDependencies": {
    "husky": "^4.2.3",
    "lint-staged": "^10.2.2",
    "prettier": "^1.19.1",
    "sort-package-json": "^1.40.0"
  }
}
